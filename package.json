{
  "name": "site-cloner-cli",
  "version": "1.0.0",
  "description": "CLI to clone a website locally and make it work offline (static assets + internal links).",
  "type": "module",
  "bin": {
    "site-cloner": "index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node index.js",
    "clone": "node index.js",
    "preview": "node scripts/preview.js",
    "clean": "node -e \"import('fs').then(fs=>fs.rmSync('dist',{recursive:true,force:true}))\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "cheerio": "^1.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.1",
    "mime-types": "^2.1.35",
    "p-limit": "^5.0.0"
  },
  "main": "index.js",
